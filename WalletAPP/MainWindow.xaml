<Window x:Class="WalletAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WalletAPP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="tekst" Content="Label" HorizontalAlignment="Left" Margin="33,32,0,0" VerticalAlignment="Top" Height="75" Width="307" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.267"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="btn" Content="Button" HorizontalAlignment="Left" Margin="59,296,0,0" VerticalAlignment="Top" Height="96" Width="172" Click="btn_Click"/>
        <ListBox x:Name="lista" Margin="461,72,66,71" SelectionChanged="lista_SelectionChanged"/>

    </Grid>
</Window>
